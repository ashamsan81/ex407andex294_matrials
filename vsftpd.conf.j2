# replace HOST_FQDN with approperate ansible fact 
ftpd_banner=Welcome to VSFTP Server on <HOST_FQDN>
anonymous_enable=NO
local_enable=YES
userlist_deny=NO
userlist_enable=YES
userlist_file= {{ user_list_path }}
write_enable=YES
local_umask= {{ local_umask_value }}
data_connection_timeout={{ conn_timeout }}
chroot_local_user=YES
listen=YES
pam_service_name=vsftpd
tcp_wrappers=YES
/etc/ssl/private/vsftpd.pem -out /etc/ssl/private/vsftpd.pem
rsa_cert_file=/etc/ssl/private/vsftpd.pem
rsa_private_key_file=/etc/ssl/private/vsftpd.pem
ssl_enable=YES
allow_anon_ssl=NO
force_local_data_ssl=YES
force_local_logins_ssl=YES
require_ssl_reuse=NO
ssl_ciphers=HIGH
pasv_enable=YES
pasv_min_port=64000
pasv_max_port=64321
port_enable=YES
allow_writeable_chroot=YES

